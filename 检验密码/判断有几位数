#include<stdio.h> 
int main()
{
	int password = 123;
	int cpassword;
	int n;
	for(n=0;n<3;n++)
	{
		printf("请输入密码：");
		scanf("%d",&cpassword);
		if(cpassword==password)
		{
			printf("欢迎\n");
			break;
		}
		else if(cpassword!=password)
		{
			printf("错误\n");
		}
	        
	}
	
	
	if(n<3)
	{
		printf("登陆成功\n"); 
	}
	else
	{
		printf("登陆失败\n"); 
	}
	
	int sum=0;
	int i=0;
	
	while(cpassword>0)
	{
		sum = sum + cpassword%10;
		cpassword = cpassword/10;
		i++;
	}
	printf("%d\n",sum);
	printf("有%d位数",i);
	
	printf("\n");
	return 0;	
	
}
